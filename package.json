{
  "name": "nepali-profanity-filter",
  "version": "1.0.1",
  "description": "A comprehensive profanity filter for Nepali language supporting both English and Devanagari script",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build && npm test",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "nepali",
    "profanity",
    "filter",
    "content-moderation",
    "censorship",
    "bad-words",
    "devanagari",
    "nepal",
    "नेपाली"
  ],
  "author": "Your Name <hello@goothi.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/upendrashrestha/nepali-profanity-filter.git"
  },
  "bugs": {
    "url": "https://github.com/upendrashrestha/nepali-profanity-filter/issues"
  },
  "homepage": "https://github.com/upendrashrestha/nepali-profanity-filter#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.5",
    "tsup": "^7.2.0",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  }
}
